<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="@drawable/main_bg"
              android:orientation="vertical"
              android:padding="8dp">

    <TextView
        android:id="@+id/welcomeTextView"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:text="Welcome user!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#f7991f"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:text="Continue As..."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp"
        android:textStyle="bold|italic"/>

    <Button
        android:id="@+id/doctorButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_weight="1.5"
        android:background="@drawable/radio_button_bg"
        android:onClick="proceedToNextStep"
        android:padding="10dp"
        android:text="Doctor"
        android:textColor="#0407be"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/patientButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_weight="1.5"
        android:background="@drawable/radio_button_bg"
        android:onClick="proceedToNextStep"
        android:padding="10dp"
        android:text="Patient"
        android:textColor="#0407be"
        android:textSize="20sp"
        android:textStyle="bold"/>

</LinearLayout>