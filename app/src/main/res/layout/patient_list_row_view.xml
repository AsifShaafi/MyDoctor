<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/patientListCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="2dp"
        android:background="#427ec7"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#427ec7">

            <ImageView
                android:id="@+id/patientListImage"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:contentDescription="patient image"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_image" />


            <TextView
                android:id="@+id/lsitPatientNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/patientListImage"
                android:layout_toRightOf="@+id/patientListImage"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="26sp"
                tools:text="Asif Imtiaz Shaafi" />

            <TextView
                android:id="@+id/userIdTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lsitPatientNameTextView"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/patientListImage"
                android:layout_toRightOf="@+id/patientListImage"
                android:padding="3dp"
                android:text="UserId: "
                android:textColor="#80ffffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/listPatientUserIdTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/userIdTitleTextView"
                android:layout_toEndOf="@+id/userIdTitleTextView"
                android:layout_toLeftOf="@+id/ageTitleTextView"
                android:layout_toRightOf="@+id/patientListImage"
                android:layout_toStartOf="@+id/ageTitleTextView"
                android:padding="3dp"
                android:textColor="#ffffffff"
                android:textSize="22sp"
                android:gravity="center_vertical"
                tools:text="sifat" />

            <TextView
                android:id="@+id/ageTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/listPatientUserIdTextView"
                android:layout_toLeftOf="@+id/listPatientAgeTextView"
                android:layout_toStartOf="@+id/listPatientAgeTextView"
                android:padding="3dp"
                android:text="Age: "
                android:textColor="#80ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/listPatientAgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/ageTitleTextView"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                tools:text="100" />

            <CheckBox
                android:id="@+id/patientListCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/patientListImageProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="42dp"
                android:layout_marginStart="42dp"
                android:visibility="gone"
                tools:visibility="visible" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>