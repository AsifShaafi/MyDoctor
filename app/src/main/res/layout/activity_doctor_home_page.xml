<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shaafi.mydoctor.doctor.DoctorHomePage">

    <Button
        android:id="@+id/getPatientListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Patient List" />

    <TextView
        android:id="@+id/doctorHomePageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#edfc1e"
        android:gravity="center"
        android:padding="6dp"
        android:text="Doctor Details"
        android:textColor="#170fec"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/docNameTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/doctorHomePageTitle"
        android:layout_marginTop="48dp"
        android:text="Name:"
        android:textColor="#ffffff"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/doctorNAmeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/docNameTitleTextView"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:text="New Text"
        android:textColor="#ffffffff"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/docSectorTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:text="Sectors:"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/doctorSectorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/docSectorTitleTextView"
        android:gravity="center"
        android:padding="4dp"
        android:text="New Text"
        android:textColor="#ffffff"
        android:textSize="24sp" />

</RelativeLayout>
